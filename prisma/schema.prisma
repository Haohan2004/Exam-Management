generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

model User{
  userid Int @id @default(autoincrement())
  username String @unique
  password String
  email String @unique
  roleid Int
  status Int
  question Question[]
  exam Exam[]
  exam_attempt Exam_Attempt[]
}
model Role{
  roleid Int @id @default(autoincrement())
  rolename String
  status Int
  Role_Permission Role_Permission[]

}
model Permission{
  perid Int @id @default(autoincrement())
  pername String
  status Int
}
model Role_Permission{
  rpid Int @id @default(autoincrement())
  roleid Int
  role Role @relation(fields: [roleid], references: [roleid],onDelete: Cascade,onUpdate: Cascade)
}
model Group{
  groupid Int @id @default(autoincrement())
  groupname String
  subject Subject[]
}
model Subject{
  subjectid Int @id @default(autoincrement())
  subjectname String
  grade Int
  groupid Int
  group Group @relation(fields: [groupid], references: [groupid],onDelete: Cascade,onUpdate: Cascade)
  chapter Chapter[]
  question Question[]
  exam Exam[]
}
model Chapter{
  chapid Int @id @default(autoincrement())
  chapnumber Int
  chapname String
  subjectid Int
  subject Subject @relation(fields: [subjectid],references: [subjectid],onUpdate: Cascade,onDelete: Cascade)
  question Question[]
  exam Exam[]
}
model Question{
  quesid Int @id @default(autoincrement())
  content String
  level Level @default(Easy)
  userid Int
  subjectid Int
  chapid Int
  author User @relation(fields: [userid],references: [userid],onUpdate: Cascade,onDelete: Cascade)
  subject Subject @relation(fields: [subjectid],references: [subjectid],onDelete: Cascade,onUpdate: Cascade)
  chapter Chapter @relation(fields: [chapid],references: [chapid],onUpdate: Cascade,onDelete: Cascade)

  answer Answer[]
  exam_question Exam_Question[]
  attempt_answer Attempt_Answer[]

}

enum Level{
  Easy
  Medium
  Hard
}
model Answer{
  ansid Int @id @default(autoincrement())
  content String
  is_correct Boolean
  quesid Int
  question Question @relation(fields: [quesid],references: [quesid],onUpdate: Cascade,onDelete: Cascade)
  attempt_answer Attempt_Answer[]

}
model Exam{
  examid Int @id @default(autoincrement())
  examname String
  subjectid Int
  chapid Int
  userid Int
  start_time DateTime
  end_time DateTime
  subject Subject @relation(fields: [subjectid],references: [subjectid],onDelete: Cascade,onUpdate: Cascade)
  chapter Chapter @relation(fields: [chapid],references: [chapid],onUpdate: Cascade,onDelete: Cascade)
  user User @relation(fields: [userid],references: [userid],onDelete: Cascade,onUpdate: Cascade)
  exam_question Exam_Question[]
  exam_attempt Exam_Attempt[]
}
model Exam_Question{
  exqid Int @id @default(autoincrement())
  score Int
  quesid Int
  examid Int
  question Question @relation(fields: [quesid], references: [quesid],onUpdate: Cascade,onDelete: Cascade)
  exam Exam @relation(fields: [examid],references: [examid],onDelete: Cascade,onUpdate: Cascade)

}
model Exam_Attempt{
  attemptid Int @id @default(autoincrement())
  start_time DateTime
  end_time DateTime
  total_score Int
  status Int
  userid Int
  examid Int
  user User @relation(fields: [userid],references: [userid],onUpdate: Cascade,onDelete: Cascade)
  exam Exam @relation(fields: [examid],references: [examid],onDelete: Cascade,onUpdate: Cascade)
  attemp_answer Attempt_Answer[]
}
model Attempt_Answer{
  attemptansid Int @id @default(autoincrement())
  attemptid Int
  quesid Int
  ansid Int
  attempt Exam_Attempt @relation(fields: [attemptid],references: [attemptid],onUpdate: Cascade,onDelete: Cascade)
  question Question @relation(fields: [quesid],references: [quesid],onDelete: Cascade,onUpdate: Cascade)
  answer Answer @relation(fields: [ansid],references: [ansid],onUpdate: Cascade,onDelete: Cascade)
}